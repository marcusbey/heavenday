{
  "name": "heaven-dolls",
  "version": "1.0.0",
  "private": true,
  "description": "Heaven Dolls - Automated marketplace for trending products",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
