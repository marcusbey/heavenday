{
  "name": "heaven-dolls",
  "version": "1.0.0",
  "private": true,
  "description": "Heaven Dolls - Automated marketplace for trending products",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\"",
    "test": "turbo test",
    "test:coverage": "jest --config jest.coverage.config.js --coverage",
    "test:e2e": "playwright test",
    "test:performance": "lhci autorun",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e -- --reporter=dot",
    "test:integration": "./scripts/run-integration-tests.sh",
    "test:integration:setup": "./scripts/run-integration-tests.sh --setup-only",
    "test:integration:teardown": "./scripts/run-integration-tests.sh --teardown-only",
    "test:integration:frontend-cms": "./scripts/run-integration-tests.sh frontend-cms",
    "test:integration:automation-cms": "./scripts/run-integration-tests.sh automation-cms",
    "test:integration:tracking": "./scripts/run-integration-tests.sh tracking",
    "test:integration:database": "./scripts/run-integration-tests.sh database",
    "test:integration:e2e-flows": "./scripts/run-integration-tests.sh e2e",
    "test:integration:performance": "./scripts/run-integration-tests.sh performance",
    "test:integration:security": "./scripts/run-integration-tests.sh security",
    "test:integration:error-handling": "./scripts/run-integration-tests.sh error-handling",
    "test:full": "npm run test && npm run test:e2e && npm run test:integration",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.4.3",
    "@playwright/test": "^1.43.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.6",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "lighthouse": "^11.7.1",
    "@lhci/cli": "^0.13.0",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "msw": "^2.2.14",
    "jest-mock-extended": "^3.0.6",
    "@faker-js/faker": "^8.4.1"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "author": "",
  "license": "MIT"
}