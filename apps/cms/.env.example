# Host configuration
HOST=0.0.0.0
PORT=1337
PUBLIC_URL=http://localhost:1337

# Database configuration
DATABASE_CLIENT=postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/heaven_dolls_cms
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=heaven_dolls_cms
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_SSL=false
DATABASE_SCHEMA=public
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000

# Security
APP_KEYS=YOUR_APP_KEY_1,YOUR_APP_KEY_2,YOUR_APP_KEY_3,YOUR_APP_KEY_4
ADMIN_JWT_SECRET=YOUR_ADMIN_JWT_SECRET
API_TOKEN_SALT=YOUR_API_TOKEN_SALT
TRANSFER_TOKEN_SALT=YOUR_TRANSFER_TOKEN_SALT
JWT_SECRET=YOUR_JWT_SECRET

# Admin configuration
ADMIN_URL=/admin
SERVE_ADMIN=true

# API configuration
API_URL=http://localhost:1337/api

# Upload configuration
UPLOAD_PROVIDER=local
MAX_FILE_SIZE=209715200
# AWS S3 configuration (if using AWS)
AWS_ACCESS_KEY_ID=
AWS_ACCESS_SECRET=
AWS_REGION=
AWS_BUCKET=

# Email configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@heaven-dolls.com
DEFAULT_REPLY_TO_EMAIL=support@heaven-dolls.com

# Redis configuration
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_DEBUG=false

# Development flags
FLAG_NPS=true
FLAG_PROMOTE_EE=true
LOG_LEVEL=info
NODE_ENV=development

# GraphQL configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_DEPTH_LIMIT=10
GRAPHQL_AMOUNT_LIMIT=100
GRAPHQL_TRACING=false
GRAPHQL_INTROSPECTION=true

# CORS configuration
IS_PROXIED=true

# Webhooks
WEBHOOKS_POPULATE_RELATIONS=false