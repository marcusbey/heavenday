{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Marketplace product with comprehensive fields for e-commerce"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 500,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "originalPrice": {
      "type": "decimal",
      "min": 0
    },
    "discountPercentage": {
      "type": "float",
      "min": 0,
      "max": 100
    },
    "sku": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100
    },
    "barcode": {
      "type": "string",
      "maxLength": 50
    },
    "weight": {
      "type": "float",
      "min": 0
    },
    "dimensions": {
      "type": "component",
      "component": "product.dimensions"
    },
    "stockQuantity": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "lowStockThreshold": {
      "type": "integer",
      "min": 0,
      "default": 10
    },
    "trackInventory": {
      "type": "boolean",
      "default": true
    },
    "allowBackorder": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "active", "inactive", "out_of_stock", "discontinued"],
      "default": "draft",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "trending": {
      "type": "boolean",
      "default": false
    },
    "trendingScore": {
      "type": "float",
      "min": 0,
      "max": 100
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "videos": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["videos"]
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "component",
      "component": "media.gallery",
      "repeatable": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "subCategories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::sub-category.sub-category",
      "mappedBy": "products"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-variant.product-variant",
      "mappedBy": "product"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "mappedBy": "products"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    },
    "averageRating": {
      "type": "float",
      "min": 0,
      "max": 5
    },
    "reviewCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "specifications": {
      "type": "component",
      "component": "product.specification",
      "repeatable": true
    },
    "materials": {
      "type": "component",
      "component": "product.material",
      "repeatable": true
    },
    "careInstructions": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 60,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seoDescription": {
      "type": "text",
      "maxLength": 160,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seoKeywords": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "canonicalUrl": {
      "type": "string"
    },
    "metaRobots": {
      "type": "string",
      "default": "index,follow"
    },
    "structuredData": {
      "type": "json"
    },
    "sourceUrl": {
      "type": "string"
    },
    "sourceMarketplace": {
      "type": "enumeration",
      "enum": ["amazon", "ebay", "etsy", "shopify", "custom"],
      "default": "custom"
    },
    "externalId": {
      "type": "string"
    },
    "lastScrapedAt": {
      "type": "datetime"
    },
    "scrapingMetadata": {
      "type": "json"
    },
    "trendingData": {
      "type": "component",
      "component": "analytics.trending-data"
    },
    "viewCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "purchaseCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "wishlistCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "relatedProducts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "crossSellProducts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "upSellProducts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "shippingInfo": {
      "type": "component",
      "component": "product.shipping-info"
    },
    "returnPolicy": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "warrantyInfo": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "publishedAt": {
      "type": "datetime"
    },
    "createdBy": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "updatedBy": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    }
  }
}